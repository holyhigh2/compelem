{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "resolveJsonModule":true,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "strictNullChecks": true,
        "disableSizeLimit":true,
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "exclude": [
        "test/*",
        "node_modules",
        "**/*.spec.ts"
    ]
}